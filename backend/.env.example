# ExoPlanet AI API Environment Configuration

# Environment
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# For development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./exoplanet_ai.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/exoplanet_ai

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080,http://localhost:5500,http://127.0.0.1:5500

# Redis (optional)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# ML Model
MODEL_PATH=models/
MAX_PREDICTION_BATCH_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes