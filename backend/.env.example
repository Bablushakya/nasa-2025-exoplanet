# ExoPlanet AI Enhanced - Environment Variables Template
# Copy this file to .env and update the values

# Application Settings
PROJECT_NAME=ExoPlanet AI Enhanced
PROJECT_DESCRIPTION=NASA & Gemini AI Integration Platform
VERSION=2.0.0
DEBUG=False
ENVIRONMENT=production

# API Keys (Replace with your actual keys)
NASA_API_KEY=your_nasa_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/exoplanet_ai.db
# For PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/exoplanet_ai

# Security (Change these in production!)
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
ALLOWED_HOSTS=*

# Cache Settings
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.json

# Model Settings
MODEL_PATH=models/
MAX_PREDICTION_BATCH_SIZE=100